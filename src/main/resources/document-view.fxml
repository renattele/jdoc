<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import jdoc.document.presentation.components.MarkdownTextArea?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="jdoc.document.presentation.DocumentController" fx:id="container" style="-fx-background-color: -fx-surface">
    <padding>
        <Insets bottom="20.0" left="60.0" right="60.0" top="20.0"/>
    </padding>
    <HBox alignment="CENTER_RIGHT" fx:id="clientsContainer" spacing="8">
    </HBox>
    <MarkdownTextArea fx:id="textArea" VBox.vgrow="ALWAYS"
                      style="-fx-background-color: -fx-surface; -fx-text-fill: -fx-primary"/>
</VBox>
